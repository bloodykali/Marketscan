{
    "manifest_version": 3,
    "name": "MarketScan",
    "version": "1.2",
    "description": "Filter Facebook Marketplace products by price, always in Bangladesh.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.facebook.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "64": "icon.png",
            "128": "icon.png",
            "256": "icon.png",
            "512": "icon.png"
        }
    }
}